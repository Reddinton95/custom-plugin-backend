{
  "hooks": [
    {
      "name": "auto-update-progress",
      "description": "Automatically track learning progress",
      "trigger": "on-skill-completion",
      "action": "update-progress-file"
    },
    {
      "name": "validate-projects",
      "description": "Validate project submissions",
      "trigger": "on-project-submit",
      "action": "run-assessment"
    },
    {
      "name": "check-prerequisites",
      "description": "Verify agent prerequisites before starting",
      "trigger": "on-agent-start",
      "action": "verify-prerequisites"
    },
    {
      "name": "generate-certificate",
      "description": "Generate completion certificate",
      "trigger": "on-agent-completion",
      "action": "generate-cert"
    }
  ]
}
